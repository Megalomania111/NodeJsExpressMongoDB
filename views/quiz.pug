extends layout

block content
  h1= title
  if (show)
    form(method='post')
      p Jaka pora roku
      ul
        each item in data
          li
            label=item.title
            input(type='radio' name='quiz' value=item._id)
      input(type="submit" value='just do it')
  else  
    h1 ju≈º
    p wyniki
    ul
    each item in data
      li #{item.title} #{item.vote} (#{Math.round(item.vote/sum*100)}%)
    p #{sum}
      